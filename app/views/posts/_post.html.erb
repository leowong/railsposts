<div class="post clearfix">
  <div class="clearfix">
    <span class="datetime">
      <%- if params[:source] -%>
        <span class="result"><%= friendly_datetime post.published_at %></span>
      <%- elsif post_counter % 10 == 0 -%>
        <%= time_ago_in_words(post.published_at) %> ago
      <%- else -%>
        &nbsp;
      <%- end -%>
    </span>
    <span class="title">
      <span class="loading" style="display:none">
	<%= image_tag "loading.gif" %>
      </span>
      <%= link_to h(post.title), post.url, :target => "_blank" %>
    </span>
    <span class="source">
      <%= link_to post.source || "unknown", :source => post.source %>
    </span>
  </div>
  <div class="summary" style="display:none">
  </div>
</div>
<%- if post_counter % 10 == 9 -%>
  <hr class="space" />
<%- end -%>
