<% title "Post" %>

<p>
  <strong>Title:</strong>
  <%=h @post.title %>
</p>
<p>
  <strong>Summary:</strong>
  <%=h @post.summary %>
</p>
<p>
  <strong>Url:</strong>
  <%=h @post.url %>
</p>
<p>
  <strong>Published At:</strong>
  <%=h @post.published_at %>
</p>
<p>
  <strong>Guid:</strong>
  <%=h @post.guid %>
</p>
<p>
  <strong>Source:</strong>
  <%=h @post.source %>
</p>

<p>
  <%= link_to "Edit", edit_post_path(@post) %> |
  <%= link_to "Destroy", @post, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", posts_path %>
</p>
