<% title link_to @post.title, @post.url, :target => "_blank" %>

<div id="page">
  <p>
    <strong>
      From <%= link_to @post.news_feed.source, @post.news_feed.homepage, :target => "_blank" %>, published
      <%- if published_today? @post.published_at -%>
        today
      <%- else -%>
        on <%=h friendly_datetime @post.published_at %>
      <%- end -%>
    </strong>
  </p>

  <div class="clearfix">
    <%- if @post.summary -%>
      <%= @post.summary %>
    <%- else -%>
      <%= @post.content %>
    <%- end -%>
  </div>

  <p>
    <%= link_to "View all posts from #{@post.news_feed.source}", :controller => :posts, :actions => :index, :source => @post.news_feed.source %>
  </p>

  <%- if admin? -%>
    <p>
      <%= link_to "Edit", edit_post_path(@post) %> |
      <%= link_to "Destroy", @post, :confirm => 'Are you sure?', :method => :delete %> |
      <%= link_to "View All", posts_path %>
    </p>
  <%- end -%>
</div>
